---
import Button from '../components/Button.svelte'

// Data Fetching: Get markdown file
let contentData = await Astro.glob('../pages/singular/hero.md');
let content = contentData[0].frontmatter
//console.log(content)
---
<section class="container mx-auto px-6 py-32 flex items-center min-h-screen relative">

  <div class="w-full md:w-8/12 lg:w-6/12 space-y-8 z-10">

    <div>
      <h3 class="text-2xl lg:text-3xl dark:text-white">
        {content.tagline}
      </h3>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-semibold dark:text-white">
        {content.mainTagline}
      </h2>
    </div>

    <div class="text-xl lg:text-2xl dark:text-white">
      {content.description}
    </div>

    <div class="lg:flex lg:space-x-6 space-y-6 lg:space-y-0">
      <Button classes="bg-lime-400 shadow-lime-400">{content.mainButton.label}</Button>
      <Button classes="bg-teal-400 shadow-teal-400">{content.secondaryButton.label}</Button>
    </div>
    
  </div>

  <div class="w-full h-full right-0 md:w-8/12 lg:w-6/12 absolute">
    <div class="blobs absolute left-0 top-0 w-full h-full lg:overflow-visible">
      <div class="absolute w-9/12 aspect-square rounded-full filter blur-xl opacity-100 animate-blob-hero dark:opacity-70 animation-spice-1"></div>
      <div class="absolute w-9/12 aspect-square rounded-full filter blur-xl opacity-100 animate-blob-hero-2 dark:opacity-70 "></div>
      <div class="absolute w-9/12 aspect-square rounded-full filter blur-xl opacity-100 animate-blob-hero dark:opacity-70 animation-spice-2"></div>
    </div>  
  </div>

</section>

<style lang="scss">
  .animation-spice-1 {
    animation-delay: 2.5s;
    animation-duration: 8s;
  }
  .animation-spice-2 {
    animation-delay: 4s;
    animation-duration: 10s;
  }
  .animate-blob-hero {
    animation-name: blob-hero;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-duration: 12s;
  }
  .animate-blob-hero-2 {
    animation-name: blob-hero-2;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-duration: 16s;
  }
  .blobs{
    div:nth-child(1){
      top: 10%;
      left: -10%;
      background: radial-gradient(50% 50% at 50% 50%, rgba(45, 192, 166, 0.68) 0%, rgba(0, 196, 160, 0) 89.58%); 
    }
    div:nth-child(2){
      top: 30%;
      left: 30%;
      background: radial-gradient(50% 50% at 50% 50%, rgba(151, 227, 115, 0.84) 0%, rgba(47, 209, 130, 0) 87.5%);
    }
    div:nth-child(3){
      top: 40%;
      left: 20%;
      background: radial-gradient(50% 50% at 50% 50%, rgba(121, 247, 63, 0.84) 0%, rgba(47, 209, 130, 0) 87.5%);
    }
  }
  @keyframes blob-hero{
    0% {
      transform: translate(0, 0) scale(1);
    }
    33% {
        transform: translate(10%, -10%) scale(1.5);
    }
    66% {
        transform: translate(-20%, 40%) scale(0.9);
    }
    100% {
        transform: tranlate(0, 0) scale(1);
    }
  }
  @keyframes blob-hero-2{
    0% {
      transform: translate(0, 0) scale(1);
    }
    25% {
        transform: translate(15%, -30%) scale(0.9);
    }
    50% {
        transform: translate(-20%, 43%) scale(1.3);
    }
    75% {
        transform: translate(5%, 20%) scale(1.2);
    }
    100% {
        transform: tranlate(0, 0) scale(1);
    }
  }
</style>