---
import Button from './Button.svelte'
---

<form id="netlifyForm" class="w-full max-w-lg space-y-3" method="POST" data-netlify="true" action="/#netlifyForm" >

  <div class="flex flex-wrap -mx-3">
    <div class="w-full px-3 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-900 dark:text-white text-xs font-bold mb-2" for="grid-name">
        Name
        <input
        class="appearance-none block w-full bg-white text-gray-900 border rounded mt-2 py-3 px-4 leading-tight focus:outline-none focus:bg-white"
        id="grid-name" type="text">
      </label>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3">
    <div class="w-full px-3 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-900 dark:text-white text-xs font-bold mb-2"
        for="grid-subject">
        Subject
        <input
        class="appearance-none block w-full bg-white text-gray-700 border rounded mt-2 py-3 px-4 leading-tight focus:outline-none focus:bg-white"
        id="grid-subject" type="text">
      </label>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3">
    <div class="w-full px-3 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-900 dark:text-white text-xs font-bold mb-2"
        for="grid-email">
        E-mail
        <input
        class="appearance-none block w-full bg-white text-gray-700 border rounded mt-2 py-3 px-4 leading-tight focus:outline-none focus:bg-white"
        id="grid-email" type="text">
      </label>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3">
    <div class="w-full px-3 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-900 dark:text-white text-xs font-bold mb-2"
        for="grid-email">
        Message
      </label>
      <textarea
        class="appearance-none block w-full bg-white text-gray-700 h-40 border rounded mt-2 py-3 px-4 leading-tight focus:outline-none focus:bg-white"
        id="grid-email" type="text"></textarea>
    </div>
  </div>

  <div class="pt-3">
    <Button type="submit" style="Primary" link="">Send</Button>
  </div>

</form>

