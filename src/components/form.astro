---
import Button from './Button.svelte'
---

<form name="netlifyForm" id="netlifyForm" class="w-full max-w-lg space-y-3" method="POST" data-netlify="true">

  <div class="flex flex-wrap -mx-3">
    <div class="w-full px-3 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-900 dark:text-white text-xs font-bold mb-2">
        Name
        <input class="appearance-none font-normal text-base block w-full bg-white text-gray-900 border rounded mt-2 py-3 px-4 leading-tight focus:outline-none focus:bg-white" type="text" required>
      </label>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3">
    <div class="w-full px-3 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-900 dark:text-white text-xs font-bold mb-2">
        Subject
        <input class="appearance-none font-normal text-base block w-full bg-white text-gray-700 border rounded mt-2 py-3 px-4 leading-tight focus:outline-none focus:bg-white" type="text" required>
      </label>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3">
    <div class="w-full px-3 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-900 dark:text-white text-xs font-bold mb-2">
        E-mail
        <input class="appearance-none font-normal text-base block w-full bg-white text-gray-700 border rounded mt-2 py-3 px-4 leading-tight focus:outline-none focus:bg-white" type="email" required>
      </label>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3">
    <div class="w-full px-3 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-900 dark:text-white text-xs font-bold mb-2">
        Message
      </label>
      <textarea class="appearance-none font-normal text-base block w-full bg-white text-gray-700 h-40 border rounded mt-2 py-3 px-4 leading-tight focus:outline-none focus:bg-white" type="text" required></textarea>
    </div>
  </div>

  <div class="pt-3">
    <Button type="submit" style="Primary" link="">Send</Button>
  </div>

</form>

