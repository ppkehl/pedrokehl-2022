---
import Base from '../../layouts/Base.astro'

// Data Fetching API
import {translationEngine} from '../../lib/translationEngine';

export async function getStaticPaths() {

  const posts = await Astro.glob('../../../_data/content/pages/*.md')
  const postsData = await translationEngine(posts, "single_file");

  return postsData.map((post) => {
    return {
      params: {
        locale: post.locale,
        slug: post.slug
      },
      props: {
        translations: post.translations
      }
    };
  });
}

const { postType, locale } = Astro.params;
const { translations } = Astro.props;
---

<Base postType={postType} locale={locale} translations={translations}>



</Base>